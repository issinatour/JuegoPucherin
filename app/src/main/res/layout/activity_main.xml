<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="100"
        android:focusableInTouchMode="false"
        android:id="@+id/principal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="85"
            android:weightSum="100"
            android:layout_centerHorizontal="true"
            android:id="@+id/tableroyjugadores">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="15"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:id="@+id/jugadores" >

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/listViewJugadores"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:headerDividersEnabled="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="85"
                android:layout_width="0sp"
                android:weightSum="100"
                android:layout_height="fill_parent"
                android:id="@+id/tablero">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="20"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="32.5"
                        android:layout_height="0sp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="35"
                        android:layout_height="0sp"
                        android:id="@+id/circulo5">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo5" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="32.5"
                        android:layout_height="0sp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="20"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila2">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="35"
                        android:id="@+id/circulo6">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo6" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="30"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="35"
                        android:id="@+id/circulo4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo4" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="20"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila3">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="33"
                        android:id="@+id/circulo8">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo8" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="33"
                        android:id="@+id/circulo7">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo7" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="33"
                        android:id="@+id/circulo3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo3" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="20"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila4">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="35"
                        android:id="@+id/circulo9">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo9" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="30"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="35"
                        android:id="@+id/circulo2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo2" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="20"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila5">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="35"
                        android:id="@+id/circulo10">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo10" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="30"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="35"
                        android:id="@+id/circulo11">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imagencirculo11" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="15"
            android:weightSum="100"
            android:id="@+id/infogame">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0sp"
                android:layout_weight="25"
                android:weightSum="100"
                android:layout_height="fill_parent"
                android:id="@+id/paneldados">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="30"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/dado1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="100"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:id="@+id/imageViewDADO1" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="30"
                    android:layout_height="fill_parent"
                    android:weightSum="100"
                    android:id="@+id/dado2">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="100"
                        android:layout_height="0sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageViewDADO2" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0sp"
                    android:layout_weight="40"
                    android:layout_height="fill_parent"
                    android:id="@+id/panelbotondado">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go!"
                        android:id="@+id/buttondatdos"
                        android:onClick="lanzarEldado"
                        android:background="@drawable/backgroundbutton"
                        android:textColor="#00a98c" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_weight="25"
                android:weightSum="100"
                android:layout_height="fill_parent"
                android:id="@+id/paneljugador"
                android:baselineAligned="false"
                android:layout_marginLeft="4dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="50"
                    android:layout_height="0sp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jugador actual"
                        android:id="@+id/textView"
                        android:layout_gravity="center"
                        android:textColor="#ffffffff"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="50"
                    android:layout_height="0sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre Jugador"
                        android:id="@+id/textViewNombreJugador"
                        android:textSize="14sp"
                        android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0sp"
                android:layout_weight="25"
                android:weightSum="100"
                android:layout_height="fill_parent"
                android:id="@+id/panelpuchero">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0sp"
                    android:layout_weight="75"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total puchero :"
                        android:id="@+id/textView3"
                        android:layout_gravity="center"
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0sp"
                    android:layout_weight="25"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:id="@+id/textView7FichasTotales"
                        android:layout_gravity="center"
                        android:textColor="#ffffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0sp"
                android:layout_weight="25"
                android:weightSum="100"
                android:layout_height="fill_parent"
                android:id="@+id/panelfichastotales">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0sp"
                    android:layout_weight="55"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fichas restantes"
                        android:id="@+id/textView5"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0sp"
                    android:layout_weight="55"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X"
                        android:id="@+id/textViewFichasRestantes"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
