<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="100"
        android:focusableInTouchMode="false"
        android:id="@+id/principal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="85"
            android:weightSum="100"
            android:layout_centerHorizontal="true"
            android:id="@+id/tableroyjugadores">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="15"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:id="@+id/jugadores" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="85"
                android:layout_width="0sp"
                android:weightSum="100"
                android:layout_height="fill_parent"
                android:id="@+id/tablero">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="18"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="30"
                        android:layout_height="0sp"
                        android:layout_gravity="center_vertical"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="40"
                        android:layout_height="0sp"
                        android:id="@+id/circulo5"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_weight="30"
                        android:layout_height="0sp"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="18"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila2">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="40"
                        android:id="@+id/circulo6"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="20"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="40"
                        android:id="@+id/circulo4"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="28"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila3">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="30"
                        android:id="@+id/circulo8"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="40"
                        android:id="@+id/circulo7"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="30"
                        android:id="@+id/circulo3"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="18"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila4">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="40"
                        android:id="@+id/circulo9"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="20"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="40"
                        android:id="@+id/circulo2"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0sp"
                    android:layout_weight="18"
                    android:weightSum="100"
                    android:layout_height="fill_parent"
                    android:id="@+id/fila5">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="40"
                        android:id="@+id/circulo10"
                        android:layout_marginTop="10dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="20"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="0sp"
                        android:layout_weight="40"
                        android:id="@+id/circulo11"
                        android:layout_marginBottom="10dp"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="15"
            android:id="@+id/infogame"></LinearLayout>
    </LinearLayout>
</RelativeLayout>
